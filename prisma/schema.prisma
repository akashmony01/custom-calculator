// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Tbl_Admin {
  id       Int    @id @default(autoincrement())
  username String @db.VarChar(30)
  password String @db.VarChar(255)
}

model Tbl_Calculator {
  id           Int             @id @default(autoincrement())
  calc_name    String          @db.VarChar(50)
  calc_desc    String          @db.LongText
  is_published Boolean         @default(true)
  input        Tbl_Input[]
  output       Tbl_Output?
  expression   Tbl_Expression?
}

model Tbl_Expression {
  id         Int            @id @default(autoincrement())
  expression String         @db.LongText
  calc       Tbl_Calculator @relation(fields: [c_id], references: [id])
  c_id       Int            @unique
}

model Tbl_Input {
  id        Int            @id @default(autoincrement())
  disp_name String         @db.VarChar(50)
  var_name  String         @db.VarChar(50)
  calc      Tbl_Calculator @relation(fields: [c_id], references: [id])
  c_id      Int
}

model Tbl_Output {
  id        Int            @id @default(autoincrement())
  disp_name String         @db.VarChar(50)
  calc      Tbl_Calculator @relation(fields: [c_id], references: [id])
  c_id      Int            @unique
}
