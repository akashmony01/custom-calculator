// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Admins {
  id         Int      @id @default(autoincrement())
  username   String   @unique @db.VarChar(20)
  password   String   @db.LongText
  created_at DateTime @default(now())
}

model Calculators {
  id          Int           @id @default(autoincrement())
  name        String        @db.VarChar(255)
  status      Boolean       @default(true)
  created_at  DateTime      @default(now())
  Expressions Expressions[]
}

model Expressions {
  id          Int         @id @default(autoincrement())
  name        String      @db.VarChar(255)
  expressions String      @db.VarChar(255)
  c_id        Int
  i_id        Int
  o_id        Int
  created_at  DateTime    @default(now())
  calculators Calculators @relation(fields: [c_id], references: [id])
  inputs      Inputs      @relation(fields: [i_id], references: [id])
  output      Outputs     @relation(fields: [o_id], references: [id])
}

model Inputs {
  id          Int           @id @default(autoincrement())
  name        String        @db.VarChar(255)
  created_at  DateTime      @default(now())
  Expressions Expressions[]
}

model Outputs {
  id          Int           @id @default(autoincrement())
  name        String        @db.VarChar(255)
  created_at  DateTime      @default(now())
  Expressions Expressions[]
}
